---
import "@fontsource/mochiy-pop-one";

import Link from "./Link.astro";

import { PROFILE } from "../consts";

export type Props = {
	shortInMobile?: boolean;
};

const shortInMobile = Astro.props.shortInMobile ?? true;
---

<div class="profile-txts">
	<div>
		<img class="profile-icon" src="/icon.webp" alt="" />
	</div>
	<div>
		<p class="profile-name">{PROFILE.name}</p>
		<p class="profile-description">{PROFILE.description}</p>
	</div>
</div>
<div class="profile-info">
	<div>
		<div class="sub-head">
			<p>所属</p>
		</div>
		<div class="profile-link">
			{PROFILE.orgs.map((props) => <Link {...props} />)}
		</div>
	</div>
	<div>
		<div class="sub-head">
			<p>開発参加</p>
		</div>
		<div class="profile-link">
			{PROFILE.coding.map((props) => <Link {...props} />)}
		</div>
	</div>
	<div>
		<div class="sub-head">
			<p>関連リンク</p>
		</div>
		<div class="profile-link">
			{PROFILE.links.map((props) => <Link {...props} />)}
		</div>
	</div>
</div>
<div class="about-link sub-head">
    <p>
        <a href="/about">詳細を閲覧</a>
    </p>
</div>

<style>
	.profile-icon {
		border-radius: 50%;
		width: 50%;
		margin: 0 auto;
	}
	.profile-name {
		font-size: 30px;
		font-weight: 600;
		text-align: center;
	}
	.profile-description {
		text-align: center;
	}
	.profile-link {
		width: 80%;
		margin: 0 auto 26px;
	}
	.sub-head {
		text-align: center;
		margin-top: 10px;
	}
	.sub-head p {
		font-family: "Mochiy Pop One", sans-serif;
		font-size: 18px;
	}
    .about-link {
        display: none;
    }

	@media screen and (max-width: 950px) {
		.profile-icon {
			width: 30%;
		}
	}
</style>

{shortInMobile &&
    <style>
        @media screen and (max-width: 950px) {
            .profile-info {
                display: none;
            }
            .about-link {
                display: block !important;
                margin-top: 30px !important;
            }
        }
    </style>
}
